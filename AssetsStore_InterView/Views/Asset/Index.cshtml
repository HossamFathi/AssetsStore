@model IEnumerable<AssetsStore_InterView.ViewModel.AssetViewModel>

@{
    ViewData["Title"] = "Index";
}
<form asp-action="Search">
    <div class="col-lg-12 form-group row">
        <input type="text" name="Asset" id="Search" class="form-control col-lg-8" required />
    <button type="submit" class="btn btn-success col-lg-4">Search</button>
</div>
</form>
<h1>Assets</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<table class="table table-hover">
    <thead class="table-primary">
        <tr>
           
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.Name )
            </td>
            <td>
                    <a href="/Asset/Edit" id=item.ID  class="btn btn-outline-primary" >Edit</a> 
                    <a href="/Asset/Details" id=item.ID class="btn btn-outline-info">Details</a>
                    <a href="/Asset/delete" id=item.ID  class="btn btn-outline-danger" >delete</a> 
            </td>
        </tr>
}
    </tbody>
</table>
